extends  ../_skeleton

//- Includes

block variables
	- var activeIndex = 7
	- var pageName = 'Subscribe forms'


block page
	// Page Header
	include ../sections/_header-fullwidth

	section.breadcrumbs-custom.parallax-container(data-parallax-img=src = 'images/bg-image-11.jpg')
		.parallax-content
			.shell
				h2.breadcrumbs-custom__title Subscribe forms

				ul.breadcrumbs-custom__path
					li: a(href='index.html') Home
					li: a(href='#') Elements
					li.active Subscribe forms

	section.section.section-xs.bg-white.novi-background.bg-cover
		.shell.shell-wide: .range.range-md-center.range-fix: .cell-lg-11
			h3 Subscribe form

	section.section.section-md.bg-gray-dark.bg-image.novi-background.custom-bg-image.text-center(style='background-image: url(images/bg-image-2.jpg);')
		.shell: .range.range-fix.range-sm-center: .cell-sm-9.cell-md-8.cell-lg-7
			h3 Subscribe to Our Newsletter
			p.big: span.reveal-inline-block(style='max-width: 580px;') Sign up to our newsletter and be the first to know about latest company news, special offers, events, and discounts.

			// RD Mailform
			form.rd-mailform.rd-mailform_inline.rd-mailform_inline-centered(data-form-output="form-output-global", data-form-type='subscribe', method='post', action='bat/rd-mailform.php')
				.form-wrap
					input#subscribe-email-1.form-input(type="email" name="email" data-constraints="@Email @Required")
					label.form-label(for="subscribe-email-1") Enter your e-mail
				button(type="submit").button.button-primary  Subscribe

	section.section.section-xs.bg-white.novi-background.bg-cover
		.shell.shell-wide: .range.range-md-center.range-fix: .cell-lg-11
			h3 Subscribe form center

	section.section.section-md.bg-gray-dark.bg-image.novi-background.custom-bg-image.text-center(style='background-image: url(images/bg-image-2.jpg);')
		.shell: .range.range-fix.range-sm-center: .cell-sm-8.cell-md-7.cell-lg-6
			h3 Subscribe to Our Newsletter
			p.big: span.reveal-inline-block(style='max-width: 580px;') Sign up to our newsletter and be the first to know about latest company news, special offers, events, and discounts.

			// RD Mailform
