extends  ../_skeleton

//- Includes
include ../elements/_ui-thumb-zoe

block variables
	- var activeIndex = 7
	- var pageName = 'Projects'


block page
	// Page Header
	include ../sections/_header-fullwidth

	section.breadcrumbs-custom.parallax-container(data-parallax-img=src = 'images/bg-image-11.jpg')
		.parallax-content
			.shell
				h2.breadcrumbs-custom__title Projects

				ul.breadcrumbs-custom__path
					li: a(href='index.html') Home
					li: a(href='#') Elements
					li.active Projects

	section.section.section-xs.bg-gray-1.novi-background.bg-cover
		.shell.shell-wide: .range.range-md-center.range-fix: .cell-lg-11
			h3 Projects

	// Our Projects
	section.section.section-md.bg-white.novi-background.bg-cover
		.shell.shell-wide: .range.range-md-center.range-fix: .cell-lg-11
			// Section Header
			.section__header
				h2 Our Projects
				.section__header-element
					a.link.link-arrow(href='our-work.html'): span See All Projects

		.shell-fluid
			.isotope(data-isotope-layout='masonry', data-isotope-group='projects', data-column-class=".isotope-item-etalon")
				.row.row-no-gutter
					.col-xs-6.col-md-4.isotope-item
						+thumb-zoe({
							img: 'project-1-639x524',
							title: 'New Office Co.'
						})
					.col-xs-6.col-md-2.isotope-item.isotope-item-etalon
						+thumb-zoe({
							img: 'project-2-320x262',
							title: '2K Stationery'
						})
					.col-xs-6.col-md-2.isotope-item
						+thumb-zoe({
							img: 'project-4-320x524',
							title: 'iStep'
						})
					.col-xs-6.col-md-4.isotope-item
						+thumb-zoe({
							img: 'project-3-640x524',
							title: 'PaperWorks Ltd.'
						})
					.col-xs-6.col-md-2.isotope-item
						+thumb-zoe({
							img: 'project-5-320x262',
							title: 'BTS Corp.'
						})
	="\n"

	section.section.section-xs.bg-gray-1.novi-background.bg-cover
		.shell.shell-wide: .range.range-md-center.range-fix: .cell-lg-11
			h3 Projects with filters

	// Our Projects
	section.section.section-md.bg-white.novi-background.bg-cover
		.shell-fluid
			.row.range-40
				// Isotope Filters
				.col-lg-12
					.shell
						// Section Header
						.section__header.section__header_wide
							h4 Our Works
							.isotope-filters.isotope-filters-horizontal
								button.isotope-filters-toggle.button.button-sm.button-primary(data-custom-toggle='#isotope-filters', data-custom-toggle-disable-on-blur="true") Filter
									span.caret
								ul.isotope-filters-list#isotope-filters
									li
										a.active(data-isotope-filter='*', data-isotope-group='gallery-1', href='#') All
									li
										a(data-isotope-filter='Commercials', data-isotope-group='gallery-1', href='#') Commercials
									li
										a(data-isotope-filter='Branding', data-isotope-group='gallery-1', href='#') Branding
									li
										a(data-isotope-filter='Digital advertising', data-isotope-group='gallery-1', href='#') Digital advertising
									li
										a(data-isotope-filter='Printed Ads', data-isotope-group='gallery-1', href='#') Printed Ads

				// Isotope Content
				.col-lg-12
					.isotope.isotope-1(data-isotope-layout='masonry', data-isotope-group='gallery-1', data-column-class=".isotope-item-etalon")
						.row.row-no-gutter
							.col-xs-6.col-md-4.isotope-item(data-filter='Commercials')
								+thumb-zoe({
									img: 'project-1-639x524',
									title: 'New Office Co.'
								})
							.col-xs-6.col-md-2.isotope-item.isotope-item-etalon(data-filter='Digital advertising')
								+thumb-zoe({
									img: 'project-2-320x262',
									title: '2K Stationery'
								})
							.col-xs-6.col-md-2.isotope-item(data-filter='Commercials')
								+thumb-zoe({
									img: 'project-4-320x524',
									title: 'iStep'
								})
							.col-xs-6.col-md-4.isotope-item(data-filter='Branding')
								+thumb-zoe({
									img: 'project-3-640x524',
									title: 'PaperWorks Ltd.'
								})
							.col-xs-6.col-md-2.isotope-item(data-filter='Digital advertising')
								+thumb-zoe({
									img: 'project-5-320x262',
									title: 'BTS Corp.'
								})
							.col-xs-6.col-md-2.isotope-item(data-filter='Digital advertising')
								+thumb-zoe({
									img: 'project-7-320x524',
									title: 'Greenery Ltd.'
								})
							.col-xs-6.col-md-4.isotope-item(data-filter='Branding')
								+thumb-zoe({
									img: 'project-8-639x524',
									title: 'Laserworx'
								})
							.col-xs-6.col-md-2.isotope-item(data-filter='Printed Ads')
								+thumb-zoe({
									img: 'project-9-320x262',
									title: 'MAX Computing'
								})
							.col-xs-6.col-md-4.isotope-item(data-filter='Commercials')
								+thumb-zoe({
									img: 'project-10-640x524',
									title: 'Razor Publishing'
								})
							.col-xs-6.col-md-2.isotope-item(data-filter='Printed Ads')
								+thumb-zoe({
									img: 'project-11-320x262',
									title: 'Rolx Accessories'
								})
	="\n"

	section.section.section-xs.bg-gray-1.novi-background.bg-cover
		.shell.shell-wide: .range.range-md-center.range-fix: .cell-lg-11
			h3 Projects gallery

	// Social Responsibility & Eco Standards
	section.section.section-sm.bg-white.novi-background.bg-cover
		.shell
			// Section Header
			.section__header.section__header_wide
				h4 Our Works
				.isotope-filters.isotope-filters-horizontal
					button.isotope-filters-toggle.button.button-sm.button-primary(data-custom-toggle='#isotope-filters-1', data-custom-toggle-disable-on-blur="true") Filter
						span.caret
					ul.isotope-filters-list#isotope-filters-1
						li
							a.active(data-isotope-filter='*', data-isotope-group='gallery', href='#') All
						li
							a(data-isotope-filter='Commercials-1', data-isotope-group='gallery', href='#') Commercials
						li
							a(data-isotope-filter='Branding-1', data-isotope-group='gallery', href='#') Branding
						li
							a(data-isotope-filter='Digital advertising-1', data-isotope-group='gallery', href='#') Digital advertising
						li
							a(data-isotope-filter='Printed Ads-1', data-isotope-group='gallery', href='#') Printed Ads

		// Isotope Content
		.isotope.isotope-1(data-isotope-layout='masonry', data-isotope-group='gallery', data-lightgallery="group")
			.row.row-no-gutter
				.col-xs-6.col-sm-3.isotope-item(data-filter='Commercials-1')
					a.thumb-elegant(href='images/services-1-565x401.jpg', data-lightgallery='item')
						+jpg('services-1-565x401')
						.thumb-elegant__overlay
				.col-xs-6.col-sm-3.isotope-item(data-filter='Digital advertising-1')
					a.thumb-elegant(href='images/services-2-565x401.jpg', data-lightgallery='item')
						+jpg('services-2-565x401')
						.thumb-elegant__overlay
				.col-xs-6.col-sm-3.isotope-item(data-filter='Commercials-1')
					a.thumb-elegant(href='images/services-3-565x401.jpg', data-lightgallery='item')
						+jpg('services-3-565x401')
						.thumb-elegant__overlay
				.col-xs-6.col-sm-3.isotope-item(data-filter='Branding-1')
					a.thumb-elegant(href='images/services-4-565x401.jpg', data-lightgallery='item')
						+jpg('services-4-565x401')
						.thumb-elegant__overlay
				.col-xs-6.col-sm-3.isotope-item(data-filter='Digital advertising-1')
					a.thumb-elegant(href='images/services-5-565x401.jpg', data-lightgallery='item')
						+jpg('services-5-565x401')
						.thumb-elegant__overlay
				.col-xs-6.col-sm-3.isotope-item(data-filter='Digital advertising-1')
					a.thumb-elegant(href='images/services-6-565x401.jpg', data-lightgallery='item')
						+jpg('services-6-565x401')
						.thumb-elegant__overlay
				.col-xs-6.col-sm-3.isotope-item(data-filter='Branding-1')
					a.thumb-elegant(href='images/services-7-565x401.jpg', data-lightgallery='item')
						+jpg('services-7-565x401')
						.thumb-elegant__overlay
				.col-xs-6.col-sm-3.isotope-item(data-filter='Printed Ads-1')
					a.thumb-elegant(href='images/services-8-565x401.jpg', data-lightgallery='item')
						+jpg('services-8-565x401')
						.thumb-elegant__overlay

	// Page Footer
	include ../sections/_footer-corporate



